// TEST 1: Simple while loop
scribere "TEST 1".
numerus i esto 0.
dum i minor quam 3:
	scribere i.
	i esto i adde 1.

// TEST 2: While with false condition
scribere "TEST 2".
dum i minor quam 0:
	scribere i.

// TEST 3: While with Break and Continue statements and with floating point number
scribere "TEST 3".
fractio j esto 0.
dum j minor quam 5:
	j esto j adde 1.
	si j aequalis 2:
		perge.
	si j aequalis 4:
		exire.
	scribere j.

// TEST 4: Infinite loop with break statement
scribere "TEST 4".
numerus b esto 0.
dum verum:
	scribere "SIEMA".
	b esto b adde 1.
	si b maior quam 5,5:
		exire.

// TEST 5: Infinite loop (ctrl+c to stop)
scribere "TEST 5".
dum 3 maior quam 1:
	scribere "Loop running".